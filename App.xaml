<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PayRemind"
             x:Class="PayRemind.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
                <Setter Property="BackgroundColor" Value="#3dc4a4" />
                <Setter Property="Padding" Value="14,10" />
            </Style>


            <Style x:Key="LightTheme" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="White" />
                <!-- Otros estilos -->
            </Style>
            <Style x:Key="DarkTheme" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#32323d" />
                <!-- Otros estilos -->
            </Style>

            <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
            <Color x:Key="DarkBackgroundColor">#32323d</Color>

        </ResourceDictionary>
    </Application.Resources>
</Application>