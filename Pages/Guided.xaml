<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PayRemind.Pages.Guided"
             Title="Guided"
              BackgroundColor="Transparent">
    <AbsoluteLayout x:Name="absoluteLayout">
            <Button 
                   AbsoluteLayout.LayoutBounds="0.1, 0.1, 0.3, 0.1" 
            AbsoluteLayout.LayoutFlags="All"
                Text="Show Tooltip"
                Clicked="OnShowTooltipClicked" />

            <Button 
                           AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.4, 0.1"
           AbsoluteLayout.LayoutFlags="All"
                Text="Hide Tooltip"
                Clicked="OnHideTooltipClicked" />
    </AbsoluteLayout>
</ContentPage>